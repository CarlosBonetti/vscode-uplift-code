{
  "name": "vscode-code-insights",
  "displayName": "code-insights",
  "description": "Code metrics and insights for Git projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Code Insights",
        "properties": {
          "codeInsights.exclude": {
            "type": "array",
            "default": [],
            "description": "Configure glob patterns for excluding files and folders from all metrics calculation. Common configuration and generated files are excluded by default."
          }
        }
      }
    ],
    "commands": [
      {
        "title": "Code Insights: Show project summary",
        "command": "codeInsights.showProjectSummary"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "minimatch": "^3.0.4",
    "mocha": "^8.4.0",
    "mustache": "^4.2.0",
    "simple-git": "^2.45.1",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
